<% layout('/layouts/boilerplate.ejs') -%>

  <div class="container mt-5">
    <h1 class="mb-4">Create a Booking</h1>

    <form action="/bookings/<%= listing._id %>" method="POST" class="border p-4 rounded">
      <div class="mb-3">
        <label for="userId" class="form-label">User ID:</label>
        <input type="text" id="userId" name="userId" class="form-control" placeholder="Enter your user ID" required>
      </div>

      <div class="mb-3">
        <label for="startDate" class="form-label">Start Date:</label>
        <input type="date" id="startDate" name="startDate" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="endDate" class="form-label">End Date:</label>
        <input type="date" id="endDate" name="endDate" class="form-control" required>
      </div>

      <button type="submit" class="btn btn-primary">Book Now</button>
    </form>

    <a href="/" class="btn btn-link mt-3">Go Back to Listings</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

